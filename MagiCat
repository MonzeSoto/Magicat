  }
  }
}

void game(){
  background(50);

  if(cat1 == 0){
    pushMatrix();
    translate(50,100);
    angel.Dibujar();  
    popMatrix();
  }
  else if(cat1 == 1){
    pushMatrix();
    translate(50,100);
    chef .Dibujar();  
    popMatrix();
  }
  else if(cat1 == 2){
    pushMatrix();
    translate(50,100);
    unicorn.Dibujar();  
    popMatrix();
  }
  else if(cat1 == 3){
    pushMatrix();
    translate(50,100);
    duke.Dibujar();  
    popMatrix();
  }
  else if(cat1 == 4){
    pushMatrix();
    translate(50,100);
    wizard.Dibujar();  
    popMatrix();
  }
  if(cat2 == 0){
    pushMatrix();
    translate(650,100);
    angel.Dibujar();  
    popMatrix();  
  }
  else if(cat2 == 1){
    pushMatrix();
    translate(650,100);
    chef.Dibujar();  
    popMatrix();  
  }
  else if(cat2 == 2){
    pushMatrix();
    translate(650,100);
    unicorn.Dibujar();  
    popMatrix();  
  }
  else if(cat2 == 3){
    pushMatrix();
    translate(650,100);
    duke.Dibujar();  
    popMatrix();   
  }
  else if(cat2 == 4){
    pushMatrix();
    translate(650,100);
    wizard.Dibujar();  
    popMatrix();  
  }
/////////////////////////////////////////////////
/////////////////////////////////////////////////

  if(turno == 0){
    if(keyPressed){
      if(key == 'a'){
      c2.vida = c2.vida - c1.ataque;
      turno = 1;
      barra1++;
      }
      else if(key == 's'){
      c2.vida = c2.vida - c1.defensa;
      turno = 1;
      barra1++;
      }
      if(c2.vida <= 0){
      pantalla = 5;
      }
    }
  }
  
  if(turno == 1){
    if(keyPressed){
      if(key == 'l'){
      c1.vida = c1.vida - c2.ataque;
      turno= 0 ;
      barra2++;
      }
      else if(key == 'k'){
      c1.vida = c1.vida - c2.defensa;
      turno = 0;
      barra2++;
      }
      if(c1.vida <= 0){
      pantalla = 5;
      }
    }
  }
  
  if(barra1 == 4){
    fill(120,0,120);
    text("COMBO",200,100);
    if(keyPressed){
      if(key == 'x'){
      c2.vida = c2.vida - c1.combo;
      turno = 1;
      barra1 = 0;
      }
      if(c2.vida <= 0){
      pantalla = 5;
   }
}
}
  if(barra2 == 4){
    fill(150,0,50);
    text("COMBO",960,100);
    if(keyPressed){
      if(key == 'm'){
      c1.vida = c1.vida - c2.combo;
      turno = 0;
      barra2 = 0;
      }
      if(c1.vida <= 0){
      pantalla = 5;
   }
}
}
    if(turno == 0){
    fill(255);
    text("DO IT!",10,100);
    }
    else {
    fill(255);
    text("REVENGE!!",770,100);
    }
    
    if(turno == 0){
    fill(#4682B4);  
    }
    else{
    fill(#191970);
    }
    quad(0,0,0,70,330,70,350,0);
    
    if(turno == 1){
    fill(#98fb98);
    }
    else{
    fill(#006400);
    }
    quad(760,0,760,70,1099,70,1110,0);
    
    fill(255);
    textSize(20);
    text(c1.nombre,10,30);
    text(c2.nombre,770,30);
    if(c1.vida >= 0 && c1.vida <= 70){
    fill(#ff0000);
    }
    else if(c1.vida > 70 && c1.vida <= 130){
    fill(#ffff00);
    }
    else{
    fill(#00ff00);
    }
    rect(10,50,c1.vida*2.5,20);
    
    if(c2.vida >= 0 && c2.vida <= 70){
    fill(#ff0000);
    }
    else if(c2.vida > 70 && c2.vida <= 130){
    fill(#ffff00);
    }
    else{
    fill(#00ff00);
    }
    rect(770,50,c2.vida*2.5,20);
}



void result(){
  
background(0);
fill(#ff0000);
rect(700,100,500,500);
fill(#ff0000);

textSize(90);
text("Just a winner...",50,200);

if(c1.vida > 0){
textSize(100);
text(c1.nombre,100,500);
pushMatrix();
translate(450,80);
scale(2);
c1.Dibujar();
c1.Dibujar();
popMatrix();
}
else {
  textSize(100);
text(c2.nombre,100,500);
pushMatrix();
translate(450,80);
scale(2);
c2.Dibujar();
c2.Dibujar();
popMatrix();
}

}
