void draw(){
  
switch(pantalla){
  case 0:
  starrt();
  break;
  
  case 1:
  how();
  break;
  
  case 2:
  selec1();
  break;
  
  case 3:
  selec2();
  break;
  
  case 4:
  game();
  break;
  
  case 5:
  result();
  break;
  
  }
}


class Cat{
  String nombre;
  int vida;
  int ataque;
  int defensa;
  int combo;
  int tipo;

  Cat(String nombre_, int vida_, int ataque_, int defensa_, int combo_,int tipo_)
  {
    nombre = nombre_;
       vida = vida_;
    ataque = ataque_;
    defensa = defensa_;
    combo = combo_;
    tipo=tipo_;
   
  }

void Dibujar(){
