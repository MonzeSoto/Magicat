     void starrt(){
background(0);
fill(0);

textSize(150);
fill(250,0,250);
textSize(120);
text("MagiCAT",320,230);
text("GAME",340,350);


textSize(60);
fill(170,0,170);
text("MEOW MEOW MEOW MEOW MEOW MEOW MEOW",440,470);

fill(255);
textSize(30);
text("PLAY",500,630);
if(mousePressed){
pantalla=1;
  }
}


void how(){

background(0);
fill(#ff0000);

text("Instructions",460,100);

text("Magicat 1",110,210);

text("Claw = A",110,300);
text("Paw = S",110,400);
text("Scratch",110,500);
text("Combo  =  X",110,550);

text("Magicat 2",880,210);

text("Claw = L",880,300);
text("Paw = K",880,400);
text("Scratch",880,500);
text("Combo  =  M",880,550);


fill(255);
textSize(15);
text("OK!",410,670);
if(mousePressed){
    pantalla=2;
  
  }
}

void selec1(){

background(0);
fill(20,0,10);

textSize(80);
fill(90,0,90);
text("Choose ur MagiCat",350,100);
textSize(60);
fill(255);
text("Magicat",550,150);
textSize(30);
fill(100,0,100);
text("Angelicat",50,500);
text("Cheficat",274,500);
text("Caticorn",470,500);
text("Dukeow",790,500);
text("Wizcat",1040,500);

textSize(15);
fill(255);
text("pulsa 0",50,523);
text("pulsa 1",274,523);
text("pulsa 2",470,523);
text("pulsa 3",790,523);
text("pulsa 4",1040,523);
fill(200);
noStroke();


if(keyPressed){
  if(key == '0'){
    c1 = angel;
  cat1 = 0;
  pantalla=3;  
  }
  else if(key == '1'){
    c1 = chef;
  cat1 = 1;
  pantalla=3;  
  }
  else if(key == '2'){
    c1 = unicorn;
  cat1 = 2;
  pantalla=3;  
  }
  else if(key == '3'){
    c1 = duke; 
    cat1 = 3;
  pantalla=3;  
  }
  else if(key == '4'){
    c1 = wizard;
  cat1 = 4;
  pantalla=3;  
  }
}

}

