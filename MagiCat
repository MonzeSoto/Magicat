void setup(){
size(1200,900);

//Img

//cuadrilatero = loadImage("cuadrilatero.jpg");

//Gatos
unicorn = new Cat("Caticorn",200,8,7,15,2);
wizard = new Cat("Wizcat",200,8,10,14,4);
chef = new Cat("ChefiCat",200,7,9,14,1);
